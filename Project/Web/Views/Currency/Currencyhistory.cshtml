@model Web.ViewModels.CurrencyHistoryViewModel
@{
    ViewData["Title"] = "Currency History";
}
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Old Name</th>
            <th scope="col">New Name</th>
            <th scope="col">Old Value</th>
            <th scope="col">new Value</th>
            <th scope="col">Status</th>
            @* <th scope="col">User</th> *@
            <th scope="col">Date</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var currencyHistory in Model.CurrencyHistories)
        {
            <tr>
                <td>@currencyHistory.OldName</td>
                <td>@currencyHistory.NewName</td>
                <td>@currencyHistory.OldValue</td>
                <td>@currencyHistory.NewValue</td>
                <td>@currencyHistory.Status</td>
                @* <td>@currencyHistory.User.UserName</td> *@
                <td>@currencyHistory.Time</td>
                <td>
                    <div>
                        <form method="post" asp-controller="Currency" asp-action="DeleteCurrencyHistory">
                            <input type="hidden" name="id" value="@currencyHistory.Id" />
                            @Html.AntiForgeryToken()
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-danger mt-2" data-toggle="modal" data-target="#exampleModal">
                                Delete
                            </button>

                            <!-- Modal -->
                            <div class="modal fade text-dark" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body ">
                                            are you shure to want delete
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>